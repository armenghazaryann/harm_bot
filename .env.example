# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
USE_OPENAI=true

# Database (Postgres)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rag
POSTGRES_ENGINE=postgresql+asyncpg
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rag

# MinIO (S3-compatible)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=rag

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j

# App runtime knobs
PAGE_DPI=300
EMBED_BATCH_SIZE=128
MAX_CONCURRENCY=4
TOLERANCE_REL=0.001

# UI configuration
# Base URL that Streamlit uses to reach the API (from host):
API_BASE_URL=http://localhost:8000
# Endpoint paths (override if API routes change)
ENDPOINT_QUERY_ANSWER=/api/v1/query/answer
ENDPOINT_DOCUMENT_UPLOAD=/api/v1/documents/upload
