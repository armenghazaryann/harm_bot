# OpenAI API Configuration
OPENAI_API_KEY=
USE_OPENAI=true

# Database (Postgres)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rag
POSTGRES_ENGINE=postgresql+asyncpg
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/rag

# MinIO (S3-compatible)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=rag

# Redis / Celery - Using service name 'redis' for Docker Compose
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Neo4j (use container name to ensure resolvable hostname inside Docker network)
NEO4J_URI=bolt://rag_neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jPass12345

# App runtime knobs
PAGE_DPI=300
EMBED_BATCH_SIZE=128
MAX_CONCURRENCY=4
TOLERANCE_REL=0.001

# UI configuration for Streamlit (inside Docker network)
API_BASE_URL=http://api:8000
ENDPOINT_QUERY_ANSWER=/api/v1/query/answer
ENDPOINT_DOCUMENT_UPLOAD=/api/v1/documents/upload

# Jina AI (optional, for reranking)
JINA_API_KEY=
RERANKER_ENABLED=true
RERANKER_MODEL=jina-reranker-v2-base-multilingual
